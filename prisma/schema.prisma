// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  password    String
  credentials credentials[]
  notes       notes[]
}

model credentials {
  id       Int    @id @default(autoincrement())
  title    String
  url      String
  username String
  password String
  user     users  @relation(fields: [userId], references: [id])
  userId   Int

  @@unique([userId, title])
}

model notes {
  id         Int    @id @default(autoincrement())
  title      String
  annotation String
  user       users  @relation(fields: [userId], references: [id])
  userId     Int

  @@unique([userId, title])
}
